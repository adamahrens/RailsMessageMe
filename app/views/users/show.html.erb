<div class="ui card">
  <div class="content">
    <a class="header"><%= @user.username %></a>
    <div class="meta">
      <span class="date">Signed up <%= time_ago_in_words(@user.created_at) %></span>
    </div>
    <div class="description">
      Can be reached at <%= @user.email %>
    </div>
  </div>
  <div class="extra content">
    <a>
      <i class="user icon"></i>
      2 Friend
    </a>
  </div>
</div>
